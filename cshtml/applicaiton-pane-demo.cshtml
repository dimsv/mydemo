            {
              <div class="text-grey-600">@uiTerms["lblDidNotAnswer"]</div>
            }
            else
            {
              @answer.aaText
            }
          }

        }
        else if (answer.qstType == 1)
        {
          if (!String.IsNullOrEmpty(answer.qstSearchLabel))
          {
            if (answer.aaIsPositive == 1)
            {
              answerTag = answer.qstSearchLabel;
