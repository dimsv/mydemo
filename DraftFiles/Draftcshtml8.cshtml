<!DOCTYPE html>
<html>
<head>
    <title>Pinned Action Example</title>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Pinned Action Example</h1>
    
    <!-- Pinned Action Link -->
    <a href="#" class="clickable-link" onclick="updatePinnedButton('@timelineItem.eId')">Perform Update</a>

    <!-- Result Message Area -->
    <div id="result_message"></div>

    <script>
        function updatePinnedButton(eId) {
            // Perform AJAX POST request to update the database with the provided eId
            $.post("/data/update-database", { eId: eId }, function(response) {
                // Update result message with the response
                $('#result_message').text(response);
            })
            .fail(function() {
                // Handle error if AJAX request fails
                $('#result_message').text('Error occurred while updating the database.');
            });

            // Prevent default link behavior
            return false;
        }
    </script>
</body>
</html>



